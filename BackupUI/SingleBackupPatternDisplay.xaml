<UserControl x:Class="BackupUI.SingleBackupPatternDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBox FontSize="16" x:Name="PatternName_TextBox"></TextBox>
        <DockPanel>
            <Label>From</Label>
            <Label>To</Label>
        </DockPanel>
        <DockPanel>
            <TextBox BorderBrush="Black" BorderThickness="1"></TextBox>
            <TextBox BorderBrush="Black" BorderThickness="1"></TextBox>
        </DockPanel>
            
    </StackPanel>
</UserControl>
