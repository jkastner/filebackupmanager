<Window x:Class="BackupUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:backupUi="clr-namespace:BackupUI"
        Title="Data Backup" Height="Auto" Width="Auto">
    <TabControl>
        <TabItem Header="Run">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <RichTextBox FontSize="14" Margin="5,5,5,5" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                             IsReadOnly="True"
                         Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" BorderBrush="Black" BorderThickness="1" Name="BackupPatten_RichTextBox"></RichTextBox>
                <StackPanel Name="Options_StackPanel" Grid.Row="0" Grid.Column="2">
                    <CheckBox Margin="5,1,5,1" Name="ShutDown_CheckBox" IsChecked="{Binding ShutdownOnCompletion}">Shutdown computer when finished</CheckBox>
                    <CheckBox Margin="5,1,5,1" Name="StaggerBackup_CheckBox" IsChecked="{Binding StaggerBackup}">Stagger backup</CheckBox>
            
                </StackPanel>
                <Button Margin="5,5,5,5" Height="Auto" FontSize="22" 
                        Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Name="StartBackup_Button" Click="StartBackup_Button_Click">
                    Start</Button>
                <Label Grid.Row="1" Grid.Column="0">Overall: </Label>
                <Label Grid.Row="2" Grid.Column="0">Current: </Label>
                <ProgressBar Grid.Row="1" Grid.Column="1" Name="AllFilesCopied_ProgressBar"></ProgressBar>
                <ProgressBar Grid.Row="2" Grid.Column="1" Name="CurrentDirectoryFilesCopied_ProgressBar"></ProgressBar>
            </Grid>
        </TabItem>
        <TabItem Header="Manage">
            <backupUi:BackupPatternManagement>
            </backupUi:BackupPatternManagement>
        </TabItem>
    </TabControl>
</Window>
